<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="128dp"
        android:layout_height="84dp"
        android:id="@+id/all_user_single_img"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/default_avatar"/>

    <TextView
        android:id="@+id/all_user_single_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="28dp"
        android:text="@string/all_user_single_display_name"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/all_user_single_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="149dp"
        android:layout_marginTop="63dp"
        android:text="@string/all_user_single_display_status"
        android:textColor="@android:color/background_dark" />

</RelativeLayout>